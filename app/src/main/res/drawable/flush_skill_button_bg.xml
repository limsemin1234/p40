<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 배경은 반투명하게 설정 (좀 더 뚜렷하게) -->
    <solid android:color="#66222222" />
    
    <!-- 테두리 설정 (두께 증가 및 색상 강화) -->
    <stroke
        android:width="1.5dp"
        android:color="#DDDDDD" />
    
    <!-- 모서리 둥글기 설정 (좀 더 둥글게) -->
    <corners android:radius="6dp" />
    
    <!-- 크기 설정 (높이 증가) -->
    <size
        android:width="32dp"
        android:height="40dp" />
    
</shape> 