<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 배경은 반투명하게 설정 -->
    <solid android:color="#33FFFFFF" />
    
    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />
    
    <!-- 모서리 둥글기 설정 -->
    <corners android:radius="2dp" />
    
    <!-- 크기 설정 -->
    <size
        android:width="32dp"
        android:height="32dp" />
    
</shape> 