<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- 배경 투명 -->
    <solid android:color="#00000000" />
    
    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#FFFF00" />
    
    <!-- 모서리 둥글기 -->
    <corners android:radius="4dp" />
    
    <!-- 패딩 -->
    <padding
        android:left="4dp"
        android:right="4dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape> 