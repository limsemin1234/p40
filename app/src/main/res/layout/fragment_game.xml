<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".GameFragment">

    <!-- 상단바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#202020"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 상단바 그리드 레이아웃 -->
        <GridLayout
            android:id="@+id/topBarGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 자원 정보 -->
            <TextView
                android:id="@+id/tvResourceInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="자원: 0"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_row="0"
                android:layout_column="0" />
            
            <!-- 코인 정보 -->
            <TextView
                android:id="@+id/tvCoinInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="코인: 0"
                android:textColor="#FFD700"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_coin"
                android:drawablePadding="4dp"
                android:gravity="end"
                android:layout_row="0"
                android:layout_column="1" />
                
            <!-- 웨이브 정보 -->
            <TextView
                android:id="@+id/tvWaveInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="웨이브: 1/10"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="4dp"
                android:layout_row="1"
                android:layout_column="0" />
                
            <!-- 적 처치 정보 -->
            <TextView
                android:id="@+id/tvKillInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="처치: 0/50"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_row="1"
                android:layout_column="1" />
        </GridLayout>

        <!-- 버프 정보 표시 - 가로 배치로 수정 -->
        <LinearLayout
            android:id="@+id/buffLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="start|center_vertical"
            app:layout_constraintTop_toBottomOf="@id/topBarGrid"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvBuffTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버프:"
                android:textColor="#FFFF00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <HorizontalScrollView
                android:id="@+id/buffScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/buffContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <!-- 버프가 여기에 동적으로 추가됩니다 -->
                    <TextView
                        android:id="@+id/tvBuffList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="버프 없음"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- 상단바 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buffLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 중앙 게임 영역 -->
    <com.example.p40.game.GameView
        android:id="@+id/gameView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 플러시 스킬 버튼 컨테이너 -->
    <LinearLayout
        android:id="@+id/flushSkillButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="4dp"
        android:background="#AA444444"
        android:gravity="center"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 스킬 버튼들이 여기에 동적으로 추가됩니다 -->
        
    </LinearLayout>

    <!-- 하단바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#202020"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 하단바 상단 구분선 -->
        <View
            android:id="@+id/bottomBarDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 스탯 탭 버튼 -->
        <LinearLayout
            android:id="@+id/statTabButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/bottomBarDivider"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/myUnitTabButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="내 유닛 정보"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingVertical="6dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#444444" />

            <TextView
                android:id="@+id/enemyUnitTabButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="적 유닛 정보"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingVertical="6dp"
                android:textColor="#808080"
                android:gravity="center"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#444444" />

            <TextView
                android:id="@+id/bosUnitTabButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="적 보스 정보"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingVertical="6dp"
                android:textColor="#808080"
                android:gravity="center"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- 스탯 정보 컨테이너 -->
        <FrameLayout
            android:id="@+id/statsContainerFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/statTabButtons"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 내 유닛 스탯 정보 -->
            <LinearLayout
                android:id="@+id/myUnitStatsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/unitHealthText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="체력: 100/100"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/unitAttackText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공격력: 50"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/unitAttackSpeedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공격속도: 1.0"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/unitRangeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="사거리: 500"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 적 유닛 스탯 정보 -->
            <LinearLayout
                android:id="@+id/enemyStatsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/enemyHealthText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="체력: 50"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/enemyAttackText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공격력: 5"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/enemySpeedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이동속도: 1.0"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- 보스 유닛 스탯 정보 -->
            <LinearLayout
                android:id="@+id/bossStatsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bossHealthText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="체력: 200"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/bossAttackText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공격력: 12"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/bossSpeedText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="이동속도: 0.8"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>
        </FrameLayout>

        <!-- 일반 텍스트뷰 유지 (기존 코드와의 호환성) -->
        <TextView
            android:id="@+id/tvUnitStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체력: 100/100  |  공격력: 50  |  공격속도: 1.0/초"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/statsContainerFrame" />

        <!-- 버튼 컨트롤 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/statsContainerFrame"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/attackUpButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="공격업"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/defenseUpButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="방어업"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/cardButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="카드뽑기"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/exitButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일시정지"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 슬라이딩 패널들 -->
    <!-- 공격 업그레이드 슬라이드 패널 -->
    <LinearLayout
        android:id="@+id/attackUpgradePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 패널 상단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공격력 업그레이드"
            android:textColor="#FFCCCC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnUpgradeDamage"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="데미지 +1\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUpgradeAttackSpeed"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="공격속도 +1%\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUpgradeAttackRange"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="공격범위 +5\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 방어 업그레이드 슬라이드 패널 -->
    <LinearLayout
        android:id="@+id/defenseUpgradePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 패널 상단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="방어력 업그레이드"
            android:textColor="#CCFFCC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/defenseUpgrade1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="체력 +20\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/defenseUpgrade2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="준비중"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/defenseUpgrade3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="준비중"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 카드 슬라이드 패널 -->
    <LinearLayout
        android:id="@+id/cardPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AA333333"
        android:visibility="gone"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 패널 상단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="포커 카드"
            android:textColor="#CCCCFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="4dp" />
            
        <!-- 카드 정보 영역 -->
        <LinearLayout
            android:id="@+id/cardInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:visibility="gone">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                
                <TextView
                    android:id="@+id/tvReplaceCount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="교체: 2회"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCurrentHand"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="족보: 하이카드"
                    android:textColor="#FFD700"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 7장까지 확장 가능하도록 크기 최적화 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView1"
                        android:layout_width="42dp"
                        android:layout_height="65dp"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="4dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
