<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gameFragmentRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 상단바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#202020"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 점수 및 웨이브 정보 -->
        <TextView
            android:id="@+id/tvGameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자원: 0  웨이브: 1  처치: 0/50"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 버프 정보 표시 - 가로 배치로 수정 -->
        <LinearLayout
            android:id="@+id/buffLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="start|center_vertical"
            app:layout_constraintTop_toBottomOf="@id/tvGameInfo"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvBuffTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버프:"
                android:textColor="#FFFF00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <HorizontalScrollView
                android:id="@+id/buffScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/buffContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <!-- 버프가 여기에 동적으로 추가됩니다 -->
                    <TextView
                        android:id="@+id/tvBuffList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="버프 없음"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- 상단바 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buffLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 중앙 게임 영역 -->
    <com.example.p40.game.GameView
        android:id="@+id/gameView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 하단바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#202020"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 하단바 상단 구분선 -->
        <View
            android:id="@+id/bottomBarDivider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 디펜스 유닛 스탯 정보 -->
        <TextView
            android:id="@+id/tvUnitStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="체력: 100/100  |  공격력: 50  |  공격속도: 1.0/초"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomBarDivider" />

        <!-- 버튼 컨트롤 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tvUnitStats"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/attackUpButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="공격업"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/defenseUpButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="방어업"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/cardButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="카드"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/exitButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="일시정지"
                android:textStyle="bold"
                android:layout_margin="3dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 슬라이딩 패널들 -->
    <!-- 공격 업그레이드 슬라이드 패널 -->
    <LinearLayout
        android:id="@+id/attackUpgradePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 패널 상단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공격력 업그레이드"
            android:textColor="#FFCCCC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnUpgradeDamage"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="데미지 +1\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUpgradeAttackSpeed"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="공격속도 +1%\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnUpgradeAttackRange"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="공격범위 +5\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 방어 업그레이드 슬라이드 패널 -->
    <LinearLayout
        android:id="@+id/defenseUpgradePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 패널 상단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="방어력 업그레이드"
            android:textColor="#CCFFCC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/defenseUpgrade1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="체력 +20\n💰 10 자원"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/defenseUpgrade2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="준비중"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/defenseUpgrade3"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="준비중"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- 카드 슬라이드 패널 -->
    <LinearLayout
        android:id="@+id/cardPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <!-- 패널 상단 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#555555" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="카드 사용"
            android:textColor="#CCCCFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="공격 카드"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="방어 카드"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="특수 카드"
                android:textStyle="bold"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/main_button_selector"
                android:backgroundTint="@null"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
