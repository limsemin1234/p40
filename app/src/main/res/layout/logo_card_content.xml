<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_gravity="center"
    android:visibility="visible"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="10dp">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/premium_card_background">
        
        <!-- 카드 중앙 큰 문양 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCardSymbolCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♠"
                android:textSize="56sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>
        
        <!-- 카드 왼쪽 상단 작은 표시 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center">
            
            <TextView
                android:id="@+id/tvCardRankTopLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
                
            <TextView
                android:id="@+id/tvCardSymbolTopLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♠"
                android:textSize="18sp"
                android:textColor="#000000" />
        </LinearLayout>
        
        <!-- 카드 오른쪽 하단 작은 표시 (뒤집힘) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|right"
            android:gravity="center"
            android:rotation="180">
            
            <TextView
                android:id="@+id/tvCardRankBottomRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
                
            <TextView
                android:id="@+id/tvCardSymbolBottomRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="♠"
                android:textSize="18sp"
                android:textColor="#000000" />
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView> 