<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:padding="8dp">

    <!-- 상단 바 영역 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="덱 구성"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_coin"
                android:layout_marginEnd="4dp" />
            
            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코인: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFEB3B" />
        </LinearLayout>
    </LinearLayout>

    <!-- 덱 카드 수량 표시 -->
    <TextView
        android:id="@+id/tvDeckCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="덱 구성: 0장/53장"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- 상단 섹션 타이틀: 현재 덱 -->
    <TextView
        android:id="@+id/tvCurrentDeckTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 덱 (선택하여 카드 제거)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- 경계선 -->
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentDeckTitle" />

    <!-- 덱 카드 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDeck"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#222222"
        android:padding="4dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintBottom_toTopOf="@id/btnRemoveSelected"
        app:layout_constraintHeight_percent="0.30" />
        
    <!-- 선택한 카드 제거 버튼 -->
    <Button
        android:id="@+id/btnRemoveSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택한 카드 제거"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rvDeck"
        app:layout_constraintBottom_toTopOf="@id/tvCollectionTitle" />

    <!-- 하단 섹션 타이틀: 보유한 카드 -->
    <TextView
        android:id="@+id/tvCollectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보유한 카드 (선택하여 덱에 추가)"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRemoveSelected" />

    <!-- 경계선 -->
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvCollectionTitle" />

    <!-- 보유 카드 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCollection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#222222"
        android:padding="4dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@id/btnAddSelected"
        app:layout_constraintTop_toBottomOf="@id/divider2" />
        
    <!-- 선택한 카드 추가 버튼 -->
    <Button
        android:id="@+id/btnAddSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택한 카드 추가"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/rvCollection"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer" />

    <!-- 버튼 컨테이너 -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/btnSaveDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="덱 저장하기" 
            android:textSize="16sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 