<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:padding="16dp">

    <!-- 상단 바 영역 -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2c3e50"
        android:padding="12dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@null"
            android:src="@android:drawable/ic_menu_revert"
            android:tint="#3498db"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스탯 강화"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/coinContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1e2d3e"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:layout_centerVertical="true">
            
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_coin"
                android:layout_marginEnd="4dp" />
            
            <TextView
                android:id="@+id/tvCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코인: 0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFEB3B" />
        </LinearLayout>
    </RelativeLayout>

    <!-- 현재 스탯 정보 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/currentStatsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#222222"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 기본 스탯"
                android:textColor="#3498db"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="체력:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCurrentHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공격력:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCurrentAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공격 속도:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCurrentAttackSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="사거리:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvCurrentRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 스탯 강화 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/currentStatsCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스탯 강화"
                android:textColor="#3498db"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="5dp"/>

            <!-- 체력 강화 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#1e3a50"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="체력 강화"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="유닛의 체력을 증가시킵니다."
                        android:textColor="#CCCCCC"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/tvHealthUpgradeInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="체력 +20"
                            android:textColor="#3498db"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvHealthUpgradeCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코인: 100"
                            android:textColor="#FFEB3B"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnUpgradeHealth"
                            android:layout_width="70dp"
                            android:layout_height="36dp"
                            android:text="강화"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background"
                            android:minWidth="70dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 공격력 강화 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#1e3a50"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="공격력 강화"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="유닛의 공격력을 증가시킵니다."
                        android:textColor="#CCCCCC"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/tvAttackUpgradeInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="공격력 +5"
                            android:textColor="#3498db"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvAttackUpgradeCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코인: 150"
                            android:textColor="#FFEB3B"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnUpgradeAttack"
                            android:layout_width="70dp"
                            android:layout_height="36dp"
                            android:text="강화"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background"
                            android:minWidth="70dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 공격 속도 강화 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#1e3a50"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="공격 속도 강화"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="유닛의 공격 속도를 증가시킵니다."
                        android:textColor="#CCCCCC"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/tvAttackSpeedUpgradeInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="공격 속도 +0.1"
                            android:textColor="#3498db"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvAttackSpeedUpgradeCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코인: 200"
                            android:textColor="#FFEB3B"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnUpgradeAttackSpeed"
                            android:layout_width="70dp"
                            android:layout_height="36dp"
                            android:text="강화"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background"
                            android:minWidth="70dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 사거리 강화 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#1e3a50"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사거리 강화"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="유닛의 공격 범위를 증가시킵니다."
                        android:textColor="#CCCCCC"
                        android:textSize="12sp"
                        android:layout_marginTop="1dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="1dp">

                        <TextView
                            android:id="@+id/tvRangeUpgradeInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="사거리 +25"
                            android:textColor="#3498db"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvRangeUpgradeCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="코인: 120"
                            android:textColor="#FFEB3B"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btnUpgradeRange"
                            android:layout_width="70dp"
                            android:layout_height="36dp"
                            android:text="강화"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/button_background"
                            android:minWidth="70dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 